[Trigger]
Type = File
Operation = Install
Operation = Upgrade
Operation = Remove
Target = boot/vmlinu[xz]-*
Target = usr/lib/modules/*/vmlinu[xz]
Target = boot/*.img
Target = usr/lib/initcpio/*

[Action]
Description = Updating EFI boot entries...
Depends = efibootmgr
Depends = util-linux
Depends = glibc
When = PostTransaction
Exec = /usr/local/bin/add-to-efi.sh -p UUID -k rw -m ro
